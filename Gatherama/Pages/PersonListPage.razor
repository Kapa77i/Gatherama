@code {
    public List<PersonDto> persons { get; private set; }
    public List<PlaceDto> places { get; private set; }

    protected override async Task OnInitializedAsync()
    {
        //NÄMÄ PITÄISI TOIMIA
        using var httpClient = new HttpClient { BaseAddress = new Uri("https://localhost:5000/") };
        persons = await httpClient.GetFromJsonAsync<List<PersonDto>>("api/Person");
        places = await httpClient.GetFromJsonAsync<List<PlaceDto>>("api/Place");
        Console.WriteLine(persons);
    }
}
