<!--TÄMÄ ON TESTAUKSEEN-->
<h2>App Users</h2>

<table class="table">
    <thead>
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
        </tr>
    </thead>
    @if (persons is not null)
    {
        <tbody>



            @foreach (var item in persons)
            {
                <tr>
                    <td>@item.firstName</td>
                    <td>@item.lastName</td>
                </tr>
            }
        </tbody>
    }
</table>
